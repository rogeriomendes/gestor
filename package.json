{
  "name": "gestor",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "ruler:apply": "pnpm dlx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @gestor/db db:push",
    "db:studio": "turbo -F @gestor/db db:studio",
    "db:generate": "turbo -F @gestor/db db:generate",
    "db:migrate": "turbo -F @gestor/db db:migrate",
    "db:gestor:studio": "turbo -F @gestor/db-gestor db:studio",
    "db:gestor:generate": "turbo -F @gestor/db-gestor db:generate",
    "db:dfe:studio": "turbo -F @gestor/db-dfe db:studio",
    "db:dfe:generate": "turbo -F @gestor/db-dfe db:generate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/node": "^22.13.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "6.5.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  },
  "packageManager": "pnpm@10.27.0"
}
